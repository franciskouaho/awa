{
  "expo": {
    "name": "Awa",
    "slug": "awa",
    "version": "0.4.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "awa",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "googleServicesFile": "./GoogleService-Info.plist",
      "bundleIdentifier": "com.emplica.awa",
      "appleTeamId": "NAN7MFNMT7",
      "scheme": "awa",
      "infoPlist": {
        "UIBackgroundModes": [
          "background-fetch",
          "background-processing"
        ],
        "NSUserNotificationsUsageDescription": "Cette application utilise les notifications pour vous rappeler de prier et maintenir votre routine spirituelle."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "googleServicesFile": "./google-services.json",
      "package": "com.emplica.awa",
      "permissions": [
        "INTERNET",
        "NOTIFICATIONS",
        "POST_NOTIFICATIONS",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "RECEIVE_BOOT_COMPLETED",
        "SCHEDULE_EXACT_ALARM",
        "USE_EXACT_ALARM",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.ACCESS_MEDIA_LOCATION",
        "android.permission.VIBRATE",
        "android.permission.WAKE_LOCK"
      ],
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "@react-native-firebase/app",
      "@react-native-firebase/auth",
      [
        "expo-notifications",
        {
          "icon": "./assets/images/notification_icon.png",
          "color": "#ffffff",
          "sounds": [],
          "mode": "production",
          "androidMode": "default",
          "androidCollapsedTitle": "Awa - Rappel de prière",
          "iosDisplayInForeground": true
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "L'application a besoin d'accéder à vos photos pour sauvegarder les images de prières.",
          "savePhotosPermission": "L'application a besoin d'accéder à vos photos pour sauvegarder les images de prières.",
          "isAccessMediaLocationEnabled": true
        }
      ],
      [
        "expo-build-properties",
        {
          "ios": {
            "useFrameworks": "static"
          },
          "android": {
            "permissions": [
              "com.android.vending.BILLING"
            ]
          }
        }
      ],
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "c468d23d-43bc-4f32-9d48-73522eb0b41c"
      }
    },
    "owner": "iamfrancisco"
  }
}
